#!/usr/bin/env node

import path from "path";
import inquirer from "inquirer";

import {
  getMainCairoFile,
  getStarknetCompilerVersion,
  getFileTree,
  getClassHash,
  getIsAccountContract,
  getContractName,
} from "./steps/index.js";

import verifyClass from "./verifyClass.js";
import { SourceCode } from "./types.js";

const ui = new inquirer.ui.BottomBar();

async function main() {
  try {
    ui.log.write(
      `\nüëã Hello, Starknet explorer. Welcome to the Starkscan Contract Verifier ‚ú®\n\n`
    );
    ui.log.write(`‚ÄºÔ∏è  BEFORE YOU START:\n`);
    ui.log.write(`üêç Python users, please activate your virtual environment.`);
    ui.log.write(`üåü Protostar users, please run protostar install.\n\n`);

    const [
      mainCairoFile,
      compilerVersion,
      { classHash, networks },
      isAccountContract,
      contractName,
    ] = await Promise.all([
      getMainCairoFile(),
      getStarknetCompilerVersion(),
      getClassHash(),
      getIsAccountContract(mainCairoFile),
      getContractName({
        defaultName: path.parse(mainCairoFile).name,
      }),
    ]);

    const files = await getFileTree(mainCairoFile, compilerVersion);

    const sourceCode: SourceCode = {
      main_file_path: path.basename(mainCairoFile),
      class_hash: classHash,
      name: contractName,
      compiler_version: compilerVersion,
      is_account_contract: isAccountContract,
      files: files,
    };

    await verifyClass({
      sourceCode: sourceCode,
      networks: networks,
    });

    ui.log.write("\n");
    ui.log.write(
      "‚ú® All done! Thanks for using the Starkscan Contract Verifier."
    );
  } catch (err) {
    handleErrors(err);
  }
}

function handleErrors(err) {
  console.error(`‚ùå ${err}`);
  console.error(`Please reach out to us on Twitter @starkscanco`);
  throw err;
}

main();
